pipeline {
    agent {
        kubernetes {
            yamlFile 'Jenkins-Pipeline-Code/kubernetes-pod.yaml'
            idleMinutes 5
            // Optional: Default container for steps without explicit container()
            defaultContainer 'jnlp'
        }
    }
    tools {
        nodejs 'nodejs'  // Ensure this matches Jenkins Global Tool Config
    }
    environment {
        SCANNER_HOME = tool 'sonar-scanner'  // For Sonar if added
        AWS_ACCOUNT_ID = credentials('ACCOUNT_ID')
        AWS_ECR_REPO_NAME = credentials('ECR_REPO1')  // e.g., 'my-frontend-repo'
        AWS_DEFAULT_REGION = 'us-east-1'
        REPOSITORY_URI = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com"
        IMAGE_TAG = "${BUILD_NUMBER}"
        DOCKER_HOST = "tcp://localhost:2375"  // Now matches DinD TCP
        DOCKER_API_VERSION = '1.44'  // Global fallback
    }
    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/master']],  // Consider '*/main' if repo updated
                    userRemoteConfigs: [[
                        credentialsId: 'GITHUB',
                        url: 'https://github.com/manojbangari/End-to-End-Kubernetes-Three-Tier-DevSecOps-Project.git'
                    ]]
                )
            }
        }
        stage('Trivy Filesystem Scan') {
            steps {
                container('trivy') {
                    dir('Application-Code/frontend') {
                        sh 'trivy fs --format table --exit-code 0 . > trivyfs.txt'
                        archiveArtifacts artifacts: 'trivyfs.txt', allowEmptyArchive: true
                    }
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                container('docker-cli') {  // Use docker-cli (safer than full docker)
                    dir('Application-Code/frontend') {
                        sh '''
                            docker build -t ${AWS_ECR_REPO_NAME}:${IMAGE_TAG} .
                        '''
                    }
                }
            }
        }
        stage('Push to ECR') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-creds',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                ]]) {
                    script {
                        def ecrPassword = ""
                        container('aws') {
                            ecrPassword = sh(
                                script: "aws ecr get-login-password --region ${AWS_DEFAULT_REGION}",
                                returnStdout: true
                            ).trim()
                        }
                        container('docker-cli') {
                            sh """
                                echo '${ecrPassword}' | docker login --username AWS --password-stdin ${REPOSITORY_URI}
                                docker tag ${AWS_ECR_REPO_NAME}:${IMAGE_TAG} \
                                          ${REPOSITORY_URI}/${AWS_ECR_REPO_NAME}:${IMAGE_TAG}
                                docker push ${REPOSITORY_URI}/${AWS_ECR_REPO_NAME}:${IMAGE_TAG}
                            """
                        }
                    }
                }
            }
        }
        stage('Trivy Image Scan') {
            steps {
                container('trivy') {
                    // This version NEVER kills your entire pipeline — even on huge images
                    catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {   // ← keeps pipeline green
                        sh '''
                            echo "Starting Trivy image scan (timeout 20min)..."
                            trivy image \
                                --timeout 20m \
                                --skip-dirs "/root/.npm" \
                                --skip-dirs "/root/.cache" \
                                --ignore-unfixed \
                                --vuln-type os,library \
                                --severity HIGH,CRITICAL \
                                --format table \
                                --exit-code 0 \                 // ← never fails the step
                                ${REPOSITORY_URI}/${AWS_ECR_REPO_NAME}:${IMAGE_TAG} \
                                | tee trivyimage.txt
                            
                            echo "Scan complete. Results:"
                            cat trivyimage.txt
                        '''
                    }
                    
                    // Always archive the report — even if scan had issues
                    archiveArtifacts artifacts: 'trivyimage.txt', allowEmptyArchive: true, fingerprint: true
                }
            }
            post {
                always {
                    // Optional: Show a nice badge in Jenkins UI
                    recordIssues(
                        enabledForFailure: true,
                        tool: trivy(pattern: 'trivyimage.txt')
                    )
                }
            }
        }
        stage('Update Kubernetes Manifest') {
            environment {
                GIT_REPO_NAME = "End-to-End-Kubernetes-Three-Tier-DevSecOps-Project"
                GIT_USER_NAME = "Manoj-Bangari"
            }
            steps {
                container('aws') {  // AWS CLI not needed here; could use jnlp if git installed
                    dir('Kubernetes-Manifests-file/Frontend') {
                        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                            sh '''
                                git config --global user.email "manojbangari39@gmail.com"
                                git config --global user.name "Manoj-Bangari"
                                sed -i "s|${AWS_ECR_REPO_NAME}:.*|${AWS_ECR_REPO_NAME}:${IMAGE_TAG}|" deployment.yaml
                                git add deployment.yaml
                                git commit -m "Update frontend image to ${IMAGE_TAG}" || true
                                git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:master
                            '''
                        }
                    }
                }
            }
        }
    }
    post {
        always {
            cleanWs()
            // Optional: Notify on failure
            // emailext to: 'team@example.com', subject: "Build ${BUILD_NUMBER} - ${currentBuild.result}", body: "Check console output."
        }
    }
}
