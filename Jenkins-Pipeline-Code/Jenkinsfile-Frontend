pipeline {
    agent {
        kubernetes {
            yamlFile 'Jenkins-Pipeline-Code/kubernetes-pod.yaml'
            idleMinutes 5
            defaultContainer 'jnlp'
        }
    }

    tools {
        nodejs 'nodejs'
    }

    environment {
        SCANNER_HOME       = tool 'sonar-scanner'
        AWS_ACCOUNT_ID     = credentials('ACCOUNT_ID')
        AWS_ECR_REPO_NAME  = credentials('ECR_REPO1')
        AWS_DEFAULT_REGION = 'us-east-1'
        REPOSITORY_URI     = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com"
        IMAGE_TAG          = "${BUILD_NUMBER}"
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/master']],
                    userRemoteConfigs: [[
                        credentialsId: 'github-token',   // â† FIXED: was 'GITHUB' (wrong type)
                        url: 'https://github.com/manojbangari/End-to-End-Kubernetes-Three-Tier-DevSecOps-Project.git'
                    ]]
                )
            }
        }

        stage('Trivy Filesystem Scan') {
            steps {
                container('trivy') {
                    dir('Application-Code/frontend') {
                        sh 'trivy fs --format table --exit-code 0 . > trivyfs.txt'
                        archiveArtifacts artifacts: 'trivyfs.txt', allowEmptyArchive: true
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                container('docker-cli') {
                    dir('Application-Code/frontend') {
                        sh "docker build -t ${AWS_ECR_REPO_NAME}:${IMAGE_TAG} ."
                    }
                }
            }
        }

        stage('Push to ECR') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-creds',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                ]]) {
                    script {
                        def ecrPassword = ""
                        container('aws') {
                            ecrPassword = sh(
                                script: "aws ecr get-login-password --region ${AWS_DEFAULT_REGION}",
                                returnStdout: true
                            ).trim()
                        }
                        container('docker-cli') {
                            sh """
                                echo '${ecrPassword}' | docker login --username AWS --password-stdin ${REPOSITORY_URI}
                                docker tag ${AWS_ECR_REPO_NAME}:${IMAGE_TAG} \
                                          ${REPOSITORY_URI}/${AWS_ECR_REPO_NAME}:${IMAGE_TAG}
                                docker push ${REPOSITORY_URI}/${AWS_ECR_REPO_NAME}:${IMAGE_TAG}
                            """
                        }
                    }
                }
            }
        }

        stage('Trivy Image Scan') {
            steps {
                container('trivy') {
                    catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                        sh '''
                            echo "Scanning Docker image for vulnerabilities..."
                            trivy image \
                                --timeout 20m \
                                --skip-dirs "/root/.npm" \
                                --skip-dirs "/root/.cache" \
                                --ignore-unfixed \
                                --vuln-type os,library \
                                --severity HIGH,CRITICAL \
                                --format table \
                                --exit-code 0 \
                                ${REPOSITORY_URI}/${AWS_ECR_REPO_NAME}:${IMAGE_TAG} \
                                | tee trivyimage.txt
                            echo "Scan complete!"
                            cat trivyimage.txt
                        '''
                    }
                    archiveArtifacts artifacts: 'trivyimage.txt', allowEmptyArchive: true, fingerprint: true
                }
            }
        }

        stage('Update Kubernetes Manifest') {
            environment {
                GIT_REPO_NAME = "End-to-End-Kubernetes-Three-Tier-DevSecOps-Project"
                GIT_USER_NAME = "manojbangari"
            }
            steps {
                container('jnlp') {
                    dir('Kubernetes-Manifests-file/Frontend') {
                        withCredentials([string(credentialsId: 'github-token', variable: 'GITHUB_TOKEN')]) {
                            sh '''
                                git config --global user.email "manojbangari39@gmail.com"
                                git config --global user.name "Manoj-Bangari"
                                sed -i "s|${AWS_ECR_REPO_NAME}:.*|${AWS_ECR_REPO_NAME}:${IMAGE_TAG}|" deployment.yaml
                                git add deployment.yaml
                                git commit -m "Updated frontend image to version ${IMAGE_TAG} (Build ${BUILD_NUMBER})" || echo "No changes to commit"
                                git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:master
                            '''
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo "FULLY AUTOMATED DEVSECOPS PIPELINE SUCCESSFUL!"
        }
    }
}
