pipeline {
    agent {
        kubernetes {
            yamlFile 'kubernetes-pod.yaml'
            idleMinutes 5
        }
    }

    tools {
        nodejs 'nodejs'   // Make sure this name exists in Jenkins → Manage Jenkins → Tools
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'  // This must match the name in Jenkins Global Tool Configuration
        AWS_ACCOUNT_ID = credentials('ACCOUNT_ID')
        AWS_ECR_REPO_NAME = credentials('ECR_REPO1')
        AWS_DEFAULT_REGION = 'us-east-1'
        REPOSITORY_URI = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com"
        IMAGE_TAG = "${BUILD_NUMBER}"
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/master']],
                    userRemoteConfigs: [[
                        credentialsId: 'GITHUB',
                        url: 'https://github.com/manojbangari/End-to-End-Kubernetes-Three-Tier-DevSecOps-Project.git'
                    ]]
                )
            }
        }

        stage('SonarQube Analysis') {
            steps {
                container('sonar-scanner') {
                    dir('Application-Code/frontend') {
                        withSonarQubeEnv('sonar-server') {
                            sh """
                                ${SCANNER_HOME}/bin/sonar-scanner \
                                    -Dsonar.projectKey=frontend \
                                    -Dsonar.projectName=frontend \
                                    -Dsonar.sources=.
                            """
                        }
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                waitForQualityGate abortPipeline: true, credentialsId: 'sonar-token'
            }
        }

        stage('Trivy Filesystem Scan') {
            steps {
                container('trivy') {
                    dir('Application-Code/frontend') {
                        sh 'trivy fs --format table --exit-code 0 . > trivyfs.txt'
                        archiveArtifacts 'trivyfs.txt'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                container('docker') {
                    dir('Application-Code/frontend') {
                        sh '''
                            docker build -t ${AWS_ECR_REPO_NAME}:${IMAGE_TAG} .
                        '''
                    }
                }
            }
        }

        stage('Push to ECR') {
            steps {
                container('aws') {
                    sh '''
                        aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | \
                            docker login --username AWS --password-stdin ${REPOSITORY_URI}

                        docker tag ${AWS_ECR_REPO_NAME}:${IMAGE_TAG} \
                            ${REPOSITORY_URI}/${AWS_ECR_REPO_NAME}:${IMAGE_TAG}

                        docker push ${REPOSITORY_URI}/${AWS_ECR_REPO_NAME}:${IMAGE_TAG}
                    '''
                }
            }
        }

        stage('Trivy Image Scan') {
            steps {
                container('trivy') {
                    sh '''
                        trivy image --format table --exit-code 0 \
                            ${REPOSITORY_URI}/${AWS_ECR_REPO_NAME}:${IMAGE_TAG} > trivyimage.txt
                        cat trivyimage.txt
                    '''
                    archiveArtifacts 'trivyimage.txt'
                }
            }
        }

        stage('Update Kubernetes Manifest') {
            environment {
                GIT_REPO_NAME = "End-to-End-Kubernetes-Three-Tier-DevSecOps-Project"
                GIT_USER_NAME = "Manoj-Bangari"
            }
            steps {
                container('aws') {
                    dir('Kubernetes-Manifests-file/Frontend') {
                        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                            sh '''
                                git config --global user.email "manojbangari39@gmail.com"
                                git config --global user.name "Manoj-Bangari"

                                sed -i "s|${AWS_ECR_REPO_NAME}:.*|${AWS_ECR_REPO_NAME}:${IMAGE_TAG}|" deployment.yaml

                                git add deployment.yaml
                                git commit -m "Update frontend image to ${IMAGE_TAG}" || echo "No changes to commit"
                                git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:master
                            '''
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
